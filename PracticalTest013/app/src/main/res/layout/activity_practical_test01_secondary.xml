<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ro.pub.cs.systems.eim.practicaltest01.view.PracticalTest01SecondaryActivity">


    <EditText
        android:id="@+id/riddle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="left"
        android:hint="Riddle"
        android:enabled="false"
        android:saveEnabled="false"
        />

    <EditText
        android:id="@+id/answer"
        android:layout_below="@id/riddle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="left"
        android:hint="Answer"
        android:enabled="false"
        android:saveEnabled="false"
        />

    <EditText
        android:id="@+id/attempt"
        android:layout_below="@id/answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="left"
        android:hint="Attempt"
        android:enabled="true"
        android:saveEnabled="false"
        />



    <Button
    android:id="@+id/check_button"
    android:layout_below="@id/attempt"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_centerInParent="true"
    android:text="CHECK"/>

    <Button
        android:id="@+id/back_button"
        android:layout_below="@id/check_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:text="BACK"/>


</RelativeLayout>
